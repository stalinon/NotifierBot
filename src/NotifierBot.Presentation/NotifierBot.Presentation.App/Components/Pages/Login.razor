@page "/login"

<MudCard Class="w-25" Style="margin: auto;">
	<MudForm Model="@_model" @ref="@_form">
		<MudCardContent>
			<MudTextField Label="Email" Class="mt-3"
			              @bind-Value="@_model.Login" For="@(() => _model.Login)"/>
			<MudTextField Label="Password" Class="mt-3"
			              @bind-Value="@_model.Password" For="@(() => _model.Password)"/>
		</MudCardContent>
	</MudForm>
	<MudCardActions>
		<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick=@(async () => await OnValidSubmit())>Login</MudButton>
	</MudCardActions>
</MudCard>