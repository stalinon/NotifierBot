@page "/login"
@model NotifierBot.Presentation.Web.Components.Pages.Login

@{
    ViewData["Title"] = "Вход";
}

<div class="container">
    <div class="row col-md-6 offset-md-3 mt-5">
        <div class="card">
            <div class="card-body p-4 p-sm-5">
                <div class="row flex-between-center mb-2">
                    <div class="col-12">
                        <h5>Вход</h5>
                    </div>
                </div>
                <form method="POST" action="/login">
                    <div class="mb-3">
                        <input asp-for="Email" class="form-control" type="email" placeholder="Электронная почта"/>
                    </div>
                    <div class="mb-3">
                        <input asp-for="Password" class="form-control" type="password" placeholder="Пароль"/>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-primary d-block w-100 mt-3" type="submit" name="submit">Войти</button>
                    </div>
                </form>
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="row flex-between-center mb-2">
                        <div class="col-12">
                            <div class="alert alert-danger" role="alert">
                                @Model.ErrorMessage
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>