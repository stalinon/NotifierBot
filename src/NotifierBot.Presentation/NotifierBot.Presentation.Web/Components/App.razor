@using NotifierBot.Presentation.Web.Components.Layouts
<CascadingAuthenticationState>
    <AuthorizeView>
        <Authorized>
            <Router AppAssembly="@typeof(App).Assembly">
                <Found Context="routeData">
                    <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)"/>
                    <FocusOnNavigate RouteData="@routeData" Selector=".focus-on-load"/>
                </Found>
                <NotFound>
                    <LayoutView Layout="@typeof(MainLayout)">
                        <NotFoundPlaceholder/>
                    </LayoutView>
                </NotFound>
            </Router>
        </Authorized>
        <NotAuthorized>
            <RedirectToLoginPage />
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>